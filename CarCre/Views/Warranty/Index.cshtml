@model IEnumerable <CarCare.Models.WarrantyViewModel>

@{
    ViewBag.Title = "Warranty Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Warranty Information</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <button type="button" id="AddWarranty" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
        <table class="table table-inverse">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        Action
                    </th>
                    <th>
                        Vehicle
                    </th>
                    <th>
                        Warranty Provider
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Expiration Date
                    </th>
                    <th>
                        Coverage
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var record in Model)
                {
                    <tr>
                        <td>
                            <input type="button" id="EditBtn" value="Edit" data-id="@record.WarrantyId" onclick="location.href='@Url.Action("EditWarranty", "Warranty", new { warrantyId = record.WarrantyId})'" />
                        </td>
                        <td>
                            <input type="button" value="Delete" data-id="@record.WarrantyId" onclick="location.href='@Url.Action("DeleteWarranty", "Warranty", new { warrantyId = record.WarrantyId})'" />
                        </td>

                        <td>
                            @record.VehicleId
                        </td>
                        <td>
                            @record.WarrantyProvider
                        </td>
                        <td>
                            @record.WarrantyCost
                        </td>
                        <td>
                            @record.WarrantyStartDate
                        </td>
                        <td>
                            @record.WarrantyExpirationDate
                        </td>
                        <td>
                            @record.WarrantyCoverage
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("AddNewRecord","Warranty")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Warrant Record</h4>
            </div>
            <div class="modal-body" id="AddWarrantRecord">

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#AddWarranty').click(function () {
            var url = $('#myModal').data('url');
            debugger;
            $.get(url, function (data) {
                $('#AddWarrantRecord').html(data);
                debugger;
                $('#myModal').modal('show');
            });
        });
    });
</script>
