@model IEnumerable<CarCare.Models.RepairRecordViewModel>

@{
    ViewBag.Title = "Repair Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Repair Records</h2>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <button type="button" id="AddRepair" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
        <table class="table table-inverse">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        Action
                    </th>
                    <th>
                        Vehicle
                    </th>
                    <th>
                        Repair Station
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Short Desciption
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Completed Date
                    </th>
                    <th>
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var record in Model)
                {
                    <tr>
                        <td>
                            <input type="button" id="EditBtn" value="Edit" data-id="@record.RepairId" onclick="location.href='@Url.Action("EditRepair", "Repair", new { repairId = record.RepairId})'" />
                        </td>
                        <td>
                            <input type="button" value="Delete" data-id="@record.RepairId" onclick="location.href='@Url.Action("DeleteRepair", "Repair", new { repairId = record.RepairId})'" />
                        </td>
                        
                        <td>
                            @Html.DropDownList("VehhicleDropdown", new SelectList(record.Vehicles, "Value", "Text", record.VehicleId))
                        </td>
                        <td>
                            @record.RepairStationId
                        </td>
                        <td>
                            @record.RepairCost
                        </td>
                        <td>
                            @record.RepairShortDesc
                        </td>
                        <td>
                            @record.RepairStatus
                        </td>
                        <td>
                            @record.RepairDate
                        </td>
                        <td>
                            @record.RepairCompleteDate
                        </td>
                        <td>
                            @record.RepairDetails
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("AddNewRecord","Repair")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Repair Record</h4>
            </div>
            <div class="modal-body" id="AddRepairRecord">

            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#AddRepair').click(function () {
            var url = $('#myModal').data('url');
            debugger;
            $.get(url, function (data) {
                $('#AddRepairRecord').html(data);
                debugger;
                $('#myModal').modal('show');
            });
        });
    });
</script>


