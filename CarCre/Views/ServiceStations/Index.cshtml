@model IEnumerable<CarCare.Models.ServiceStationViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Service Station</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />



<div class="container">
    <div class="row">
        <br>
        <br>
        <br>
        <button type="button" id="AddNewServiceStation" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
        <table class="table table-inverse">
            <thead>
                <tr>

                    <th>

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OwnedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ZipCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StreetAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Longitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Latitude)
                    </th>
                    <th></th>
                </tr>

                @foreach (var ServiceStation in Model)
                {
                    <tr>
                        <td>
                            <input type="button" value="Edit" data-id="@ServiceStation.ServiceStationId" onclick="location.href='@Url.Action("EditServiceStation", "ServiceStations",  new { ServiceStationsId = ServiceStation.ServiceStationId})'" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.OwnedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.ZipCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.StreetAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.Longitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ServiceStation.Latitude)
                        </td>

                    </tr>
                }

        </table>
    </div>

</div>

<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("AddNewServiceStation", "ServiceStations")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Service Station Record</h4>
            </div>
            <div class="modal-body" id="AddNewServiceStationRecord">

            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#AddNewServiceStation').click(function () {
            var url = $('#myModal').data('url');
            debugger;
            $.get(url, function (data) {
                $('#AddNewServiceStationRecord').html(data);
                debugger;
                $('#myModal').modal('show');
            });
        });
    });
</script>

