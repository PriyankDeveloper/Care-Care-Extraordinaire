@model CarCare.Models.ServiceRecordViewModel

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@using (@Html.BeginForm("Save", Model.ControllerName, FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <table class="table">
                <tr>
                    <td>
                        Vehicle
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.VehicleId, ((List<SelectListItem>)ViewBag.Vehicles).Select(m => new SelectListItem { Text = m.Text, Value = m.Value }))
                        @Html.ValidationMessageFor(model => model.VehicleId)
                    </td>
                </tr>
                <tr>
                    <td>
                        Service Station
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.ServiceStationId, ((List<SelectListItem>)ViewBag.ServiceStations).Select(m => new SelectListItem { Text = m.Text, Value = m.Value }))
                        @Html.ValidationMessageFor(model => model.ServiceStationId)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.ServiceCost)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.ServiceCost)
                        @Html.ValidationMessageFor(model => model.ServiceCost)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.ServiceDate)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.ServiceDate,
                            new { @type = "date", @Value = Model.ServiceDate.ToString("yyyy-MM-dd") })
                        @Html.ValidationMessageFor(model => model.ServiceDate)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.StationZipCode)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.StationZipCode)
                        @Html.ValidationMessageFor(model => model.StationZipCode)
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-primary" type="submit">Save</button>
                        @Html.HiddenFor(m => m.VehicleId)
                        @Html.HiddenFor(m => m.ServiceId)
                        @Html.HiddenFor(m => m.ServiceStationId)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                    </td>
                </tr>
            </table>

        </div>

    </div>
}
