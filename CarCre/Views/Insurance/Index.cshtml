@model IEnumerable<CarCare.Models.InsuranceViewModel>

@{
    ViewBag.Title = "Insurance Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insurance Records</h2>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <button type="button" id="AddInsurance" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
        <table class="table table-inverse">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        Action
                    </th>
                    <th>
                        Vehicle
                    </th>
                    <th>
                        Insurance Provider
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Expiration Date
                    </th>
                    <th>
                        Coverage
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var record in Model)
                {
                    <tr>
                        <td>
                            <input type="button" id="EditBtn" value="Edit" data-id="@record.InsuranceId" onclick="location.href='@Url.Action("EditInsurance", "Insurance", new { insuranceId = record.InsuranceId})'" />
                        </td>
                        <td>
                            <input type="button" value="Delete" data-id="@record.InsuranceId" onclick="location.href='@Url.Action("DeleteInsurance", "Insurance", new { insuranceId = record.InsuranceId})'" />
                        </td>

                        <td>
                            @record.VehicleId
                        </td>
                        <td>
                            @record.InsuranceProvider
                        </td>
                        <td>
                            @record.InsuranceCost
                        </td>
                        <td>
                            @record.InsuranceStartDate
                        </td>
                        <td>
                            @record.InsuranceExpirationDate
                        </td>
                        <td>
                            @record.InsuranceCoverage
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("AddNewRecord","Insurance")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Insurance Record</h4>
            </div>
            <div class="modal-body" id="AddInsuranceRecord">

            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#AddInsurance').click(function () {
            var url = $('#myModal').data('url');
            debugger;
            $.get(url, function (data) {
                $('#AddInsuranceRecord').html(data);
                debugger;
                $('#myModal').modal('show');
            });
        });
    });
</script>
