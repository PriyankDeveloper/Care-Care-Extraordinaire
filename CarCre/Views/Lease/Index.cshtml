@model IEnumerable < CarCare.Models.LeaseRecordViewModel>

@{
    ViewBag.Title = "Lease Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lease Information</h2>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <button type="button" id="AddBtn" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myAddModal">Add</button>
        <table class="table table-inverse">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        Action
                    </th>
                    <th>
                        Vehicle
                    </th>
                    <th>
                        Lease Start Date
                    </th>
                    <th>
                        Lease Term (months)
                    </th>
                    <th>
                        Monthly Payment
                    </th>
                    <th>
                        Company
                    </th>
                    <th>
                        Miles Driven per Year
                    </th>
                    <th>
                        Security Deposit
                    </th>
                    <th>
                        Acquisition Fee
                    </th>
                    <th>
                        Money Factor
                    </th>
                    <th>
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var record in Model)
                {
                    <tr>
                        <td>
                            <input type="button" id="EditBtn" class="EditRecord" data-toggle="modal" data-target="#myEditModal" value="Edit" data-id="@record.LeaseId" />
                        </td>
                        <td>
                            <input type="button" value="Delete" data-id="@record.LeaseId" onclick="location.href='@Url.Action("DeleteLease", "Lease", new { leaseId = record.LeaseId})'" />
                        </td>

                        <td>
                            @Html.DropDownList("VehhicleDropdown", new SelectList(record.Vehicles, "Value", "Text", record.VehicleId))
                        </td>
                        <td>
                            @record.LeaseStartDate
                        </td>
                        <td>
                            @record.LeaseTerm
                        </td>
                        <td>
                            @record.MonthlyPayment
                        </td>
                        <td>
                            @record.Company
                        </td>
                        <td>
                            @record.MilesDrivenPerYear
                        </td>
                        <td>
                            @record.SecurityDeposit
                        </td>
                        <td>
                            @record.AcquistionFee
                        </td>
                        <td>
                            @record.MoneyFactor
                        </td>
                        <td>
                            @record.LeaseNotes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myAddModal" class="modal fade" role="dialog" data-url='@Url.Action("AddNewRecord","Lease")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Lease Record</h4>
            </div>
            <div class="modal-body" id="AddRecord">

            </div>
        </div>
    </div>

</div>

<!-- Trigger the modal with a button -->
<!-- Edit Record Modal -->
<div id="myEditModal" class="modal fade" role="dialog" data-url='@Url.Action("EditLease","Lease")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Lease Information</h4>
            </div>
            <div class="modal-body" id="EditRecord">

            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#AddBtn').click(function () {
            var url = $('#myAddModal').data('url');
            $.get(url, function (data) {
                $('#AddRecord').html(data);
                $('#myAddModal').modal('show');
            });
        });
        $('.EditRecord').click(function () {
            var url = $('#myEditModal').data('url');
            url += "?leaseId=" + $(this).data('id');
            $.get(url, function (data) {
                $('#EditRecord').html(data);
                $('#myEditModal').modal('show');
            });
        });
    });
</script>
