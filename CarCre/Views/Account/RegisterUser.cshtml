@model CarCare.Models.User

@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register User</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="register-form" action="SaveNewUser" method="post" role="form">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @style = "tabindex : 1", @class = "form-control" , placeholder="UserName"})
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @style = "tabindex : 2", @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new { @style = "tabindex : 3", @class = "form-control" , placeholder = "Password" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.ConfirmEmail, new { @style = "tabindex : 4", @class = "form-control" , placeholder = "Confirm Password" })
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>