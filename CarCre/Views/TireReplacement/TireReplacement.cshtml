
@model CarCare.Models.ServiceRecordViewModel
@{
    ViewBag.Title = "Record Tire Replacement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Record Tire Replacement</h2>
<button type="button" id="AddTireReplacement" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>

<!-- Trigger the modal with a button -->
<!-- Add New Recod Modal -->
<div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("AddTireReplacement","TireReplacement")'>
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add OilChange Record</h4>
            </div>
            <div class="modal-body" id="AddTireReplacementRecord">

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#AddTireReplacement').click(function () {
            var url = $('#myModal').data('url');
            //debugger;
            $.get(url, function (data) {
                $('#AddTireReplacementRecord').html(data);
                //debugger;
                $('#myModal').modal('show');
            });
        });
    });
</script>
